      <apex:pageBlockSection collapsible="true" Title="Site Date Information" columns="2" rendered="{!(Application.NOFA_RFP__r.Site_Date_Information__c && locationInput.Location_Type__c == 'Service Location') ||(Application.NOFA_RFP__r.Site_Date_Information__c && locationInput.Location_Type__c == 'Inclement Weather Site') ||(Application.NOFA_RFP__r.Site_Date_Information__c && locationInput.Location_Type__c == 'Member Lodging')}">
      <apex:inputField value="{!locationInput.Projected_Start_Date__c}"  styleClass="myClass"/>
      <apex:inputField value="{!locationInput.Projected_End_Date__c}"  styleClass="myClass"/>
