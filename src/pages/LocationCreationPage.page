         </apex:pageBlockSection>
      </apex:outputPanel>
      </apex:pageBlockSection>
      </apex:outputPanel>
      
      <!-- Site Type and Summer Associates Information -->
      <apex:outputPanel id="showSchool6"> 
      <apex:pageBlockSection collapsible="true" Title="Site Type and Summer Associates" columns="2" rendered="{!(Application.NOFA_RFP__r.Site_Type_and_Summer_Associates__c && locationInput.Location_Type__c == 'Service Location' )}">
      <apex:inputField value="{!locationInput.Site_Type__c}" styleClass="myClass"/>
      <apex:inputField value="{!locationInput.Summer_Associates__c}" />
      </apex:pageBlockSection>
      </apex:outputPanel>
      
