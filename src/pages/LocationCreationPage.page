      <apex:outputPanel id="showSchool7"> 
      <apex:pageBlockSection collapsible="true" Title="Site Type" columns="2" rendered="{!(Application.NOFA_RFP__r.Site_Type__c && locationInput.Location_Type__c == 'Service Location') && ($Profile.Name ='Grantee Admin')}"> 
      <apex:inputField value="{!locationInput.Station_Type__c}" styleClass="myClass" />
      <apex:inputField value="{!locationInput.Other_Station_Type__c}" />
     
     </apex:pageBlockSection>
     </apex:outputPanel>
      
      <!-- Additional Operating Site Information -->
      <apex:outputPanel id="showSchool8"> 
      <apex:pageBlockSection collapsible="true" Title="Additional Operating Site Information" columns="2" rendered="{!(Application.NOFA_RFP__r.Additional_Operating_Site_Information__c && locationInput.Location_Type__c == 'Operating Site')}">
